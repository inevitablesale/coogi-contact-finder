{
  "manifest_version": 3,
  "name": "Coogi Contact Finder",
  "version": "2.0",
  "description": "Automatically enrich opportunities with LinkedIn contacts.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://dbtdplhlatnlzcvdvptn.supabase.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "public/images/linkedin_scrapper_16.png",
      "48": "public/images/linkedin_scrapper_48.png",
      "128": "public/images/linkedin_scrapper_128.png"
    }
  },
  "icons": {
    "16": "public/images/linkedin_scrapper_16.png",
    "48": "public/images/linkedin_scrapper_48.png",
    "128": "public/images/linkedin_scrapper_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}